extends ../layout

block content
      
   if deletemsg
      p.deletemsg=deletemsg
   h1.header Cart
   table.table.table-bordered
       tr.row-heading
           td ID
           td TITLE
           td PRICE OF EACH
           td QUANTITY
           td REMOVE 
       if cartMsg
           p.cartMsg=cartMsg   
        each cartitems in cart
            tr
                td=cartitems.id
                td=cartitems.title
                td=cartitems.price
                td=cartitems.quantity      
                td
                    a(href=`/products/remove/${cartitems.id}`).btn.btn-danger Remove    
                   
                
                